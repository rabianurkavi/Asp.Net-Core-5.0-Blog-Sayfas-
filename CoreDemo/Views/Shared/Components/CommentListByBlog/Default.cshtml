@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @if(Model.Count()>0)
    { 
    @foreach (var item in Model)
    {
        <div class="media">

            <img width="100" height="100" src="~/CoreBlogTema/web/images/icon.png" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>

            </div>
            
        </div>
    }
      
    }
    else
            {
                <h4>İlk Yorumu Sen Yap.</h4>
            }
    </div>